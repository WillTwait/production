{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "useIgnoreFile": true
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded"
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "files": {
    "ignore": ["cdk.out", "babel.config.js", "db/migrations/**"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useExponentiationOperator": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "useHookAtTopLevel": "error"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  }
}
